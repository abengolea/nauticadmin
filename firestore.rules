rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    function isUserInRole(userId, role) {
      // Use direct property access instead of .get() method which is for map fields
      return exists(/databases/$(database)/documents/users/$(userId)) &&
             get(/databases/$(database)/documents/users/$(userId)).data.role == role;
    }

    function isUserAdmin(userId) {
      return isUserInRole(userId, 'admin');
    }

    function isUserCoach(userId) {
      return isUserInRole(userId, 'entrenador');
    }

    match /users/{userId} {
      allow read, write: if request.auth != null && (request.auth.uid == userId || isUserAdmin(request.auth.uid));
    }

    match /players/{playerId} {
      // Only authenticated admins or coaches can read players
      allow read: if request.auth != null && (isUserAdmin(request.auth.uid) || isUserCoach(request.auth.uid));
      // Only authenticated admins or coaches can create players
      allow create: if request.auth != null && (isUserAdmin(request.auth.uid) || isUserCoach(request.auth.uid));
      // Only admins can update or delete
      allow update, delete: if request.auth != null && isUserAdmin(request.auth.uid);
    }
  }
}
