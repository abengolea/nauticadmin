{
  "entities": {
    "PlatformUser": {
      "title": "Usuario de Plataforma",
      "description": "Representa un usuario con roles globales en la plataforma, como super_admin.",
      "type": "object",
      "properties": {
        "email": { "type": "string", "format": "email" },
        "super_admin": { "type": "boolean", "description": "Si es verdadero, el usuario es un super administrador con acceso total." },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["email", "createdAt"]
    },
    "School": {
      "title": "Escuela",
      "description": "Representa una escuela o sede de fútbol.",
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "city": { "type": "string" },
        "province": { "type": "string" },
        "address": { "type": "string" },
        "logoUrl": { "type": "string", "format": "uri" },
        "status": { "type": "string", "enum": ["active", "suspended"] },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["name", "city", "province", "status", "createdAt"]
    },
    "SchoolUser": {
      "title": "Usuario de Escuela",
      "description": "Rol y permisos de un usuario dentro de una escuela.",
      "type": "object",
      "properties": {
        "displayName": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "role": { "type": "string", "enum": ["school_admin", "coach"] }
      },
      "required": ["displayName", "email", "role"]
    },
    "Player": {
      "title": "Jugador",
      "description": "Un jugador de fútbol.",
      "type": "object",
      "properties": {
        "firstName": { "type": "string" },
        "lastName": { "type": "string" },
        "birthDate": { "type": "string", "format": "date-time" },
        "dni": { "type": "string", "description": "Documento Nacional de Identidad del jugador." },
        "healthInsurance": { "type": "string", "description": "Obra social o seguro médico del jugador." },
        "tutorContact": { "type": "object", "properties": { "name": { "type": "string" }, "phone": { "type": "string" } }, "required": ["name", "phone"]},
        "status": { "type": "string", "enum": ["active", "inactive"] },
        "photoUrl": { "type": "string", "format": "uri" },
        "observations": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" },
        "createdBy": { "type": "string" }
      },
      "required": ["firstName", "lastName", "birthDate", "tutorContact", "status", "createdAt", "createdBy"]
    },
    "Evaluation": {
      "title": "Evaluación",
      "description": "Registro de evaluación de un jugador en una fecha específica.",
      "type": "object",
      "properties": {
        "playerId": { "type": "string" },
        "date": { "type": "string", "format": "date-time" },
        "coachComments": { "type": "string" }
      },
      "required": ["playerId", "date"]
    }
  },
  "auth": {
    "providers": ["password", "google.com"]
  },
  "firestore": {
    "/platformUsers/{userId}": {
      "schema": { "$ref": "#/entities/PlatformUser" },
      "description": "Almacena los roles globales de los usuarios (super_admin)."
    },
    "/schools/{schoolId}": {
      "schema": { "$ref": "#/entities/School" },
      "description": "Colección de todas las escuelas."
    },
    "/schools/{schoolId}/users/{userId}": {
      "schema": { "$ref": "#/entities/SchoolUser" },
      "description": "Usuarios y sus roles para esta escuela."
    },
    "/schools/{schoolId}/players/{playerId}": {
      "schema": { "$ref": "#/entities/Player" },
      "description": "Jugadores de esta escuela."
    },
    "/schools/{schoolId}/evaluations/{evalId}": {
      "schema": { "$ref": "#/entities/Evaluation" },
      "description": "Evaluaciones de los jugadores de esta escuela."
    }
  }
}
