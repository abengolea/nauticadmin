{
  "entities": {
    "PlatformUser": {
      "title": "Usuario de Plataforma",
      "description": "Representa un usuario con roles globales en la plataforma, como super_admin.",
      "type": "object",
      "properties": {
        "email": { "type": "string", "format": "email" },
        "super_admin": { "type": "boolean", "description": "Si es verdadero, el usuario es un super administrador con acceso total." },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["email", "createdAt"]
    },
    "School": {
      "title": "Escuela",
      "description": "Representa una escuela o sede de fútbol.",
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "city": { "type": "string" },
        "province": { "type": "string" },
        "address": { "type": "string" },
        "logoUrl": { "type": "string", "format": "uri" },
        "status": { "type": "string", "enum": ["active", "suspended"] },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["name", "city", "province", "status", "createdAt"]
    },
     "Category": {
      "title": "Categoría",
      "description": "Representa una categoría de edad dentro de una escuela (ej. SUB-12).",
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "schoolId": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["name", "schoolId", "createdAt"]
    },
    "SchoolUser": {
      "title": "Usuario de Escuela",
      "description": "Rol y permisos de un usuario dentro de una escuela.",
      "type": "object",
      "properties": {
        "displayName": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "role": { "type": "string", "enum": ["school_admin", "coach"] },
        "assignedCategories": { "type": "array", "items": { "type": "string" }, "description": "Lista de IDs de categorías asignadas a un entrenador."}
      },
      "required": ["displayName", "email", "role"]
    },
    "Player": {
      "title": "Jugador",
      "description": "Un jugador de fútbol.",
      "type": "object",
      "properties": {
        "firstName": { "type": "string" },
        "lastName": { "type": "string" },
        "dni": { "type": "string", "description": "Documento Nacional de Identidad del jugador." },
        "healthInsurance": { "type": "string", "description": "Obra social o seguro médico del jugador." },
        "tutorContact": { "type": "object", "properties": { "name": { "type": "string" }, "phone": { "type": "string" } }, "required": ["name", "phone"]},
        "status": { "type": "string", "enum": ["active", "inactive"] },
        "photoUrl": { "type": "string", "format": "uri" },
        "observations": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" },
        "createdBy": { "type": "string" }
      },
      "required": ["firstName", "lastName", "tutorContact", "status", "createdAt", "createdBy"]
    },
    "PendingPlayer": {
      "title": "Jugador Pendiente",
      "description": "Una solicitud de registro de un nuevo jugador que está pendiente de aprobación.",
      "type": "object",
      "properties": {
        "firstName": { "type": "string" },
        "lastName": { "type": "string" },
        "dni": { "type": "string" },
        "tutorContact": { "type": "object", "properties": { "name": { "type": "string" }, "phone": { "type": "string" } }, "required": ["name", "phone"]},
        "submittedAt": { "type": "string", "format": "date-time" }
      },
      "required": ["firstName", "lastName", "tutorContact", "submittedAt"]
    },
    "Evaluation": {
      "title": "Evaluación",
      "description": "Registro de evaluación de un jugador en una fecha específica.",
      "type": "object",
      "properties": {
        "playerId": { "type": "string" },
        "date": { "type": "string", "format": "date-time" },
        "coachComments": { "type": "string" },
        "physical": {
          "type": "object",
          "properties": {
            "height": { "type": "object", "properties": { "value": { "type": "number" }, "unit": { "type": "string", "enum": ["cm"] } } },
            "weight": { "type": "object", "properties": { "value": { "type": "number" }, "unit": { "type": "string", "enum": ["kg"] } } },
            "speed20m": { "type": "object", "properties": { "value": { "type": "number" }, "unit": { "type": "string", "enum": ["s"] } } },
            "resistanceBeepTest": { "type": "object", "properties": { "value": { "type": "number" }, "unit": { "type": "string", "enum": ["level"] } } },
            "agilityTest": { "type": "object", "properties": { "value": { "type": "number" }, "unit": { "type": "string", "enum": ["s"] } } }
          }
        },
        "technical": { 
          "type": "object", 
          "description": "Habilidades técnicas, con claves dinámicas y valores de 1 a 5.",
          "additionalProperties": { "type": "number", "minimum": 1, "maximum": 5 }
        },
        "tactical": { 
          "type": "object", 
          "description": "Habilidades tácticas, con claves dinámicas y valores de 1 a 5.",
          "additionalProperties": { "type": "number", "minimum": 1, "maximum": 5 }
        },
        "socioEmotional": {
          "type": "object",
          "properties": {
            "respect": { "type": "number", "minimum": 1, "maximum": 4 },
            "responsibility": { "type": "number", "minimum": 1, "maximum": 4 },
            "teamwork": { "type": "number", "minimum": 1, "maximum": 4 },
            "empathy": { "type": "number", "minimum": 1, "maximum": 4 },
            "resilience": { "type": "number", "minimum": 1, "maximum": 4 },
            "learningAttitude": { "type": "number", "minimum": 1, "maximum": 4 }
          }
        },
        "criticalIncident": {
          "type": "object",
          "properties": {
            "type": { "type": "string", "enum": ["verbal_aggression", "physical_aggression"] },
            "comment": { "type": "string" },
            "reportedBy": { "type": "string" },
            "reportedAt": { "type": "string", "format": "date-time" }
          }
        },
        "createdAt": { "type": "string", "format": "date-time" },
        "createdBy": { "type": "string", "description": "UID del usuario que creó la evaluación." }
      },
      "required": ["playerId", "date", "createdAt", "createdBy"]
    }
  },
  "auth": {
    "providers": ["password", "google.com"]
  },
  "firestore": {
    "/platformUsers/{userId}": {
      "schema": { "$ref": "#/entities/PlatformUser" },
      "description": "Almacena los roles globales de los usuarios (super_admin)."
    },
    "/schools/{schoolId}": {
      "schema": { "$ref": "#/entities/School" },
      "description": "Colección de todas las escuelas."
    },
     "/schools/{schoolId}/categories/{categoryId}": {
      "schema": { "$ref": "#/entities/Category" },
      "description": "Categorías de edad para una escuela."
    },
    "/schools/{schoolId}/users/{userId}": {
      "schema": { "$ref": "#/entities/SchoolUser" },
      "description": "Usuarios y sus roles para esta escuela."
    },
    "/schools/{schoolId}/players/{playerId}": {
      "schema": { "$ref": "#/entities/Player" },
      "description": "Jugadores de esta escuela."
    },
    "/schools/{schoolId}/pendingPlayers/{pendingId}": {
      "schema": { "$ref": "#/entities/PendingPlayer" },
      "description": "Solicitudes de registro de jugadores pendientes de aprobación para esta escuela."
    },
    "/schools/{schoolId}/evaluations/{evalId}": {
      "schema": { "$ref": "#/entities/Evaluation" },
      "description": "Evaluaciones de los jugadores de esta escuela."
    }
  }
}
