{
    "entities": {
      "Player": {
        "title": "Jugador",
        "description": "Representa a un jugador en el sistema.",
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "El ID único del jugador."
          },
          "firstName": {
            "type": "string",
            "description": "El nombre del jugador."
          },
          "lastName": {
            "type": "string",
            "description": "El apellido del jugador."
          },
          "birthDate": {
            "type": "string",
            "format": "date",
            "description": "La fecha de nacimiento del jugador."
          },
          "category": {
            "type": "string",
            "description": "La categoría a la que pertenece el jugador (ej. U18)."
          },
          "primaryPosition": {
            "type": "string",
            "description": "La posición principal del jugador."
          },
          "status": {
            "type": "string",
            "enum": [
              "activo",
              "inactivo",
              "lesionado"
            ],
            "description": "El estado actual del jugador."
          },
          "avatarUrl": {
            "type": "string",
            "format": "uri",
            "description": "URL de la foto de perfil del jugador."
          },
          "height": {
            "type": "number",
            "description": "La altura del jugador en centímetros."
          },
          "weight": {
            "type": "number",
            "description": "El peso del jugador en kilogramos."
          },
          "city": {
            "type": "string",
            "description": "La ciudad de residencia del jugador."
          }
        },
        "required": [
          "firstName",
          "lastName",
          "birthDate",
          "category",
          "primaryPosition",
          "status"
        ]
      },
      "UserProfile": {
        "title": "Perfil de Usuario",
        "description": "Representa la información del perfil de un usuario.",
        "type": "object",
        "properties": {
          "displayName": {
            "type": "string",
            "description": "El nombre a mostrar del usuario."
          },
          "email": {
            "type": "string",
            "format": "email",
            "description": "La dirección de correo electrónico del usuario."
          },
          "photoURL": {
            "type": "string",
            "format": "uri",
            "description": "URL de la foto de perfil del usuario."
          },
          "role": {
            "type": "string",
            "description": "El rol del usuario en la aplicación.",
            "enum": ["admin", "entrenador"]
          }
        }
      }
    },
    "auth": {
      "providers": [
        "google.com",
        "password"
      ]
    },
    "firestore": {
      "/players/{playerId}": {
        "schema": {
          "$ref": "#/entities/Player"
        },
        "description": "Almacena a todos los jugadores."
      },
       "/users/{userId}": {
        "schema": {
          "$ref": "#/entities/UserProfile"
        },
        "description": "Almacena la información del perfil de usuario."
      }
    }
}
